<?xml version="1.0"?>
<odoo>
    <data>

        <template id="auth_oauth.login" inherit_id="web.login" name="OAuth Login buttons">
            <xpath expr="//button[@type='submit']" position="before">
                <div>
                    <t t-call="auth_oauth.providers"/>
                </div>
            </xpath>
        </template>

        <template id="auth_signup.login" inherit_id="web.login" name="Sign up - Reset Password">
            <xpath expr="//button[@type='submit']" position="after">
                <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}" class="btn btn-link ">Create an account without Google</a><br/>
                <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}" class="btn btn-link">Reset Password</a>
            </xpath>
            <xpath expr="//button[@type='submit']" position="attributes">
                <attribute name="class" add="hidden" separator=" "/>
            </xpath>
        </template>

    </data>
</odoo>
        