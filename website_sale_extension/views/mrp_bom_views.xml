<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_form_view_inherit_website_sale_extension" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.website.sale.extension</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree" position="inside">
                <field name="is_child_line" invisible="1"/>
                <field name="is_default_bom" attrs="{'invisible': [('is_child_line', '=', False)]}" />
                <field name="is_hidden_component" attrs="{'invisible': [('is_child_line', '=', False)]}" />
            </xpath>
        </field>
    </record>

</odoo>
