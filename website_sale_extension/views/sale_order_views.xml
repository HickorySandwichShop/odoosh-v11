<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_website_sale_extension" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.website.sale.extension</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form/group/group[2]" position="inside">
                <field name="bom_line_ids" widget="many2many_tags" />
                <field name="bom_price" widget="monetary" />
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="before">
                <field name="bom_line_ids" widget="many2many_tags" />
                <field name="bom_price" widget="monetary" />
            </xpath>
        </field>
    </record>

</odoo>
