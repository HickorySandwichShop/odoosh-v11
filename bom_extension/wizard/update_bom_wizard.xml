<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_update_bom_wizard" model="ir.ui.view">
            <field name="name">update.template.bom</field>
            <field name="model">update.template.bom</field>
            <field name="arch" type="xml">
                <form string="Update BOM">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_ids" widget="many2many_tags" required="1" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Submit" type="object" name="add_boms" context="{'product_tmpl_id':active_id}"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_update_bom_wizard" model="ir.actions.act_window">
            <field name="name">Update BOM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.template.bom</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_update_bom_wizard"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
